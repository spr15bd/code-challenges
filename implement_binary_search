function binarySearch(searchList, target) {
  let arrayPath = []
  let middleValueIdx = 0

  middleValueIdx = Math.floor((searchList.length - 1) / 2)
  //arrayPath.push(searchList[middleValueIdx])
  console.log("middleValue: ", searchList[middleValueIdx])

  let res = []
  if (searchList[middleValueIdx] === target) {
    res = arrayPath.push(searchList[middleValueIdx])
    console.log("returned: ", res)
    return res
  } else if (searchList[middleValueIdx] < target) {
    res = arrayPath.push(binarySearch(searchList.slice(middleValueIdx), target))
    console.log("returned: ", res)
    return res
  } else if (searchList[middleValueIdx] > target) {
    console.log("higher!")
    res = arrayPath.push(binarySearch(searchList.slice(0, middleValueIdx), target))
    return res
  }
}

binarySearch([0, 1, 2, 3], 0)
